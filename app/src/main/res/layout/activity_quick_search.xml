<?xml version="1.0" encoding="utf-8" ?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <WebView
        android:id="@+id/web_view_quick_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true">
        <ProgressBar
            android:id="@+id/progress_bar_quick_search"
            style="?android:progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </WebView>
    <ImageView
        android:id="@+id/error_image_view_quick_search"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_margin="70dp"
        android:layout_centerInParent="true"
        android:src="@drawable/internet_error"
        android:contentDescription="@string/error_str"/>
    <TextView
        android:id="@+id/error_text_view_quick_search"
        android:layout_below="@id/error_image_view_quick_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="10dp"
        android:layout_marginTop="-40dp"
        android:layout_centerInParent="true"
        android:textColor="@color/colorPrimaryDark"
        android:scrollHorizontally="false"
        android:text="@string/error_str"/>
</RelativeLayout>