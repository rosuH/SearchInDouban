<?xml version="1.0" encoding="utf-8" ?>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor">#b6b6b6</item>
        <item name="android:windowContentTransitions">true</item>
    </style>

    <style name="animate_dialog">
        <item name="android:windowEnterAnimation">@anim/anim_in</item>
        <item name="android:windowExitAnimation">@anim/anim_out</item>
    </style>

    <style name="Theme.DialogTemplate" parent="Theme.AppCompat.Dialog">
        <item name="android:windowBackground">@drawable/dialog_template</item>
    </style>

    <style name="Theme.DialogTemplate.Font" parent="Theme.DialogTemplate">
        <item name="android:textColor">#000000</item>
    </style>


</resources>
